{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 44,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "network",
    "bluetooth",
    "battery",
    "backlight",
    "pulseaudio",
    "pulseaudio#microphone",
    // "cpu",
    "clock"
  ],
  "hyprland/workspaces": {
    "format": "{icon}",
        // "on-scroll-up": "hyprctl dispatch workspace e+1",
        // "on-scroll-down": "hyprctl dispatch workspace e-1",
        "persistent_workspaces": {
          "*": 1
        }
  },
  "hyprland/window": {
    "format": "{}"
  },

  "cpu": {
    "interval": 1,
    "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}",
    "format-icons": [
      "<span color='#69ff94'>‚ñÅ</span>", // green
      "<span color='#2aa9ff'>‚ñÇ</span>", // blue
      "<span color='#f8f8f2'>‚ñÉ</span>", // white
      "<span color='#f8f8f2'>‚ñÑ</span>", // white
      "<span color='#ffffa5'>‚ñÖ</span>", // yellow
      "<span color='#ffffa5'>‚ñÜ</span>", // yellow
      "<span color='#ff9977'>‚ñá</span>", // orange
      "<span color='#dd532e'>‚ñà</span>"  // red
    ]
  },
  "memory": {
    "tooltip": true,
    "format": "üß† {}",
    "interval": 30
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": [ "Û∞Éû", "Û∞Éü", "Û∞É†" ],
    "on-scroll-up": "brightnessctl -q set 1%+",
    "on-scroll-down": "brightnessctl -q set 1%-"
  },
  "load": {
    "interval": 1,
    "format": "load: {load1} {load5} {load15}"
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 40,
      "critical": 30
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": [ "Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ" ]
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "tooltip": false,
    "format-muted": "ÔÄ¶ Muted",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +1%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [ "ÔÄ¶", "ÔÄß", "ÔÄ®" ]
    }
  },
  "pulseaudio#microphone": {
    "format": "{format_source}",
    "tooltip": false,
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± Muted",
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +1%",
    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -1%"
  },
  "network": {
    "format-wifi": "Ôá´  {signalStrength}% {essid}",
    "format-ethernet": "{ipaddr}/{cidr}",
    "tooltip-format": "{essid} - {ifname} via {gwaddr}",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
  },
  "bluetooth": {
    "format": "Ôäî {status}",
    "on-click": "bluetoothctl power on",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": "Ôäî {num_connections}",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": "Ôäî {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}"
  },

  "clock": {
    "interval": 5,
    "format": "{:%a %d/%m %H:%M} ÔÄó ",
    "format-alt": "{:%A, %B %d, %Y (%R)} ÔóØ ",
    "tooltip-format": "{:%d %b %Y %H:%M:%S}",
    "actions":  { }
  }
}
